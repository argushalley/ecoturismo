<h2 class="text-center">Reenviar instruções para desbloqueio de conta</h2>

<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :unlock_token %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :email, 'Email *', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.input :email, required: true, label: false, autofocus: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="form-group text-center">
        <%= f.button :submit, 'Reenviar instruções', class: 'btn btn-flat inverse' %>
      </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
