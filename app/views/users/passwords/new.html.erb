<h2 class="text-center">Esqueceu sua senha?</h2>

<div class="row">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.label :email, 'Email *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.input :email, required: true, label: false, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="form-group text-center">
        <%= f.button :submit, 'Envie-me instruções para resetar a senha', class: 'btn btn-flat inverse' %>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
