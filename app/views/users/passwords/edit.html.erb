<h2 class="text-center">Altere sua senha</h2>

<div class="row">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.label :password, 'Nova senha *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.input :password, required: true, label: false, autofocus: true) %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirme sua nova senha *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.input :password_confirmation, required: true, label: false %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="form-group text-center">
        <%= f.button :submit, 'Alterar minha senha', class: 'btn btn-flat inverse' %>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
