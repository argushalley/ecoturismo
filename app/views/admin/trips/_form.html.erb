<div class="row">
  <%= simple_form_for [:admin, @trip], html: { class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.label :description, 'Descrição *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.input :description, required: true, label: false %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :user_ids, 'Usuários *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-3">
          <%= f.collection_select :user_ids, User.all, :id, :data_name, {}, { class: 'form-control multiselect', multiple: true } %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :value, 'Valor *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-6">
          <%= f.input :value, required: true, label: false %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="form-group text-center">
        <%= f.button :submit, button_label, class: 'btn btn-flat inverse' %>
      </div>
    </div>
  <% end %>
</div>
